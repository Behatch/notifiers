{
    "name": "behatch/notifiers",
    "description": "Behatch notifiers",
    "keywords": ["BDD", "Behat", "Symfony2", "Notifiers"],
    "type": "library",
    "license": "beerware",

    "require": {
        "php": ">=5.4",
        "behat/behat": "~3.0"
    },

    "require-dev": {
        "kherge/box": "~2.0",
        "behatch/contexts": "dev-master",
        "behat/mink-goutte-driver": "~1.1"
    },

    "suggest": {
        "maknz/slack": "Allows you to use a Slack webhook as a notifier"
    },

    "autoload": {
        "psr-4": {
            "Behatch\\Notifier\\": "src/"
        }
    },

    "config": {
        "bin-dir": "bin/"
    }
}
